% 「例」と同様に番号付け環境で「定義」を作成
%
% ---2011/04/15 by ヤザキ
% 「例」と同様に番号付け環境で「仮定」を作成
%
\RequirePackage{keyval}
\newenvironment{補足0}[1][\relax]{%
\topsep.5\baselineskip\partopsep\z@
\lineskip1pt\lineskiplimit0pt
\trivlist\item[]\additionfont\textbf{補足#1.}\hskip.5zw
}{\endtrivlist}
%
\newenvironment{例題}[1][\relax]{%
\topsep\z@\partopsep\z@
\lineskip1pt\lineskiplimit0pt
\trivlist\item[]\Exercisefont\textbf{例題#1.}\hskip.5zw
}{\endtrivlist}
%
\newenvironment{定理}[1][\relax]{%
\topsep\z@\partopsep\z@
\lineskip1pt\lineskiplimit0pt
\trivlist\item[]\Exercisefont\textbf{定理#1.}\hskip.5zw
}{\endtrivlist}
%
\newenvironment{注}[1][\relax]{%
\topsep.5\baselineskip\partopsep\z@
\lineskip1pt\lineskiplimit0pt
\trivlist\item[]\additionfont\textbf{注#1.}\hskip.5zw
}{\endtrivlist}
%
\newenvironment{定義}[1][\relax]{%
\topsep\z@\partopsep\z@
\lineskip1pt\lineskiplimit0pt
\trivlist\item[]\Exercisefont\textbf{定義#1.}\hskip.5zw
}{\endtrivlist}
%
\newenvironment{仮定}[1][\relax]{%
\topsep\z@\partopsep\z@
\lineskip1pt\lineskiplimit0pt
\trivlist\item[]\Exercisefont\textbf{仮定#1.}\hskip.5zw
}{\endtrivlist}

